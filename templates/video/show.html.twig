{% extends 'base.html.twig' %}
{% block title %}
	{{ video.title }}
{% endblock %}
{% block body %}
	<article>
		<h1>{{ video.title }}</h1>
		<iframe width="640" height="480" src={{video.videoLink}}></iframe>
		<p>{{ video.description }}</p>
		<p>Soumis
			{{ video.createdAt|date }}</p>
			  <p>Par {{ video.user.firstname ~ " " ~ video.user.lastname }}</p>
		<p>Derni√®re modification
			{{ video.updatedAt|date("d/m/y H :i") }}</p>
	</article>
 {% if app.user and app.user.isVerified %}
	<td>
		<a href="{{ path('app_video_edit', { id: video.id }) }}">Modifier</a>
	</td>
	<td>
		<a href="{{ path('app_video_delete', { id: video.id }) }}">Supprimer</a>
	</td>

	<a href="{{ path('app_home') }}">Go Back</a>
{% endif %}
	{% endblock %}
