{% extends "base.html.twig" %}

{% block title %}SymRecipe - Modification de la vidéo
{% endblock %}

{% block body %}
	<div class="container">

		<h1 class="mt-4">Modification de la vidéo</h1>

		<form name="video" method="post">

			<div class="form-group">
				{{ form_label(form.title) }}
				{{ form_widget(form.title) }}
				<div class="form-error">
					{{ form_errors(form.title) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(form.videoLink) }}
				{{ form_widget(form.videoLink) }}
				<div class="form-error">
					{{ form_errors(form.videoLink) }}
				</div>
			</div>

            <div class="form-group">
				{{ form_label(form.description) }}
				{{ form_widget(form.description) }}
				<div class="form-error">
					{{ form_errors(form.description) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_widget(form.isPremiumVideo) }}
				{{ form_label(form.isPremiumVideo) }}
				<div class="form-error">
				{{ form_errors(form.isPremiumVideo) }}
			</div>
		</div>

			{{ form_row(form._token) }}

			<button type="submit" id="video_submit" name="video[submit]" class="btn btn-primary mt-4">Modifier le vidéo</button>

		</div>

	</form>
</div>{% endblock %}
