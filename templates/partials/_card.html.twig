<div class="col">
	<div class="card shadow-sm">
		<iframe class="bd-placeholder-img card-img-top" width="300" height="200" src="{{ video.videoLink }}"></iframe>
		<div class="card-body">
			<p class="card-text">{{ video.description|u.truncate(10,'...',false) }}</p>

		{% if video.isPremiumVideo  %}
			<p class="card-text">
				Premium Video
				<i class="fa-brands fa-pagelines" style="color: #78a5f2;"></i>
			</p>
		{% else %}
			<p class="card-text">
			
				Non premium
				<i class="fa-solid fa-xmark" style="color: #729fee;"></i>
			</p>
		{% endif %}
		<div class="d-flex justify-content-between align-items-center">
			<div class="btn-group">
			
				<button type="button"  class="btn btn-sm btn-outline-secondary ">
				<a  class="text-decoration-none text-dark"  href="{{ path('app_video_show', {id: video.id}) }}">Details</a>     
				</button>
				{% if app.user and app.user.isVerified %}
				{%  if video.user == app.user%}
				<button type="button" class="btn btn-sm btn-outline-secondary">
				 <a  class="text-decoration-none text-dark"  href="{{ path('app_video_edit', {id: video.id}) }}">Editer</a>     
				  {% endif %}
				  {% endif %}
                </button>
			</div>
			 <small class="text-body-secondary ml-4">IL y a 
				{{ video.createdAt|date('d-m-Y ')  }} Par
			{{ video.user.firstname ~ " " ~ video.user.lastname }}
			</small>
		</div>
	</div>
</div></div>
