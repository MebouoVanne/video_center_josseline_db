{% extends 'base.html.twig' %}

{% block title 'Profile' %}
{% block body %}
	<div class="row">
		<div class="col-md-6 mx-auto text-center">
			<h1>Profile</h1>
			<p>{{ app.user.email }}</p>
			<h2>{{ app.user.firstname ~" "~ app.user.lastname }}</h2>
			<p>Compte créé le
				{{ app.user.createdAt|date }}</p>
			<p>
				<a href="{{ path('app_account_edit')}}">Modifier le compte</a>
			</p>
		</div>
	</div>
{% endblock %}
